nextflow_process {

    name "Test Process PECAT_POLISH"
    script "modules/local/pecat/polish/main.nf"
    process "PECAT_POLISH"
    tag "pecat_polish"

    test("Normal fasta") {

        tag "pecat_polish_normal"

        when {

            process {
                """
                input[0] = [
                    [ id: "test", genome_size: 1500000 ],
                    file( '$projectDir/tests/test_data/pecat/input/reads.fasta.gz', checkIfExists: true),
                    file( '$projectDir/tests/test_data/pecat/output/normal/second_assembly/results.tar.gz', checkIfExists: true)
                ]
                input[1] = file( '$projectDir/tests/test_data/pecat/input/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Small fasta") {

        tag "pecat_polish_small"

        when {

            process {
                """
                input[0] = [
                    [ id: "test", genome_size: 1500000 ],
                    file( '$projectDir/tests/test_data/pecat/input/reads.small.fasta.gz', checkIfExists: true),
                    file( '$projectDir/tests/test_data/pecat/output/small/second_assembly/results.tar.gz', checkIfExists: true)
                ]
                input[1] = file( '$projectDir/tests/test_data/pecat/input/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
