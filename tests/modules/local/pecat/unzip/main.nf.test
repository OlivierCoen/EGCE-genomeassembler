nextflow_process {

    name "Test Process PECAT_UNZIP"
    script "modules/local/pecat/unzip/main.nf"
    process "PECAT_UNZIP"
    tag "pecat"

    test("Should run without failures") {

        when {

            process {
                """
                    input[0] = [
                        [ id: "test", genome_size: 1500000 ],
                        file( '$projectDir/tests/test_data/pecat/unzip/reads.fasta.gz', checkIfExists: true)
                    ]
                    input[1] = file( '$projectDir/tests/test_data/pecat/unzip/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Very small fasta") {
        tag "pecat_very_small"

        when {

            process {
                """
                input[0] = [
                    [ id: "test", genome_size: 1500000 ],
                    file( '$projectDir/tests/test_data/pecat/unzip/reads.small.fasta.gz', checkIfExists: true)
                ]
                input[1] = file( '$projectDir/tests/test_data/pecat/unzip/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
