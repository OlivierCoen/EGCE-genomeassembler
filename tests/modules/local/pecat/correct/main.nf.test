nextflow_process {

    name "Test Process PECAT_CORRECT"
    script "modules/local/pecat/correct/main.nf"
    process "PECAT_CORRECT"
    tag "pecat_correct"

    test("Normal fasta") {
        tag "pecat_correct_normal"

        when {

            process {
                """
                    input[0] = [
                        [ id: "test", genome_size: 1500000 ],
                        file( '$projectDir/tests/test_data/pecat/input/reads.fasta.gz', checkIfExists: true)
                    ]
                    input[1] = file( '$projectDir/tests/test_data/pecat/input/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Small fasta") {
        tag "pecat_correct_small"

        when {

            process {
                """
                input[0] = [
                    [ id: "test", genome_size: 1500000 ],
                    file( '$projectDir/tests/test_data/pecat/input/reads.small.fasta.gz', checkIfExists: true)
                ]
                input[1] = file( '$projectDir/tests/test_data/pecat/input/pecat_optional_config.txt', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
