/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/

process {

    withName: 'PECAT' {
        cpus   = 10
        memory = 25.GB
        time   = 1.h
        docker.runOptions = { "-v ${projectDir}/bin/pecat_wrapper.pl:/opt/conda/share/pecat-0.0.3-1/bin/pecat_wrapper.pl" }
    }
    withName: 'BWAMEM2_MEM' {
        cpus   = 10
        memory = 25.GB
        time   = 1.h
        }

}
